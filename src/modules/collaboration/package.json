{
  "name": "@boo/collaboration",
  "version": "1.0.0",
  "type": "module",
  "description": "Real-time collaboration system for Boo security assessment tool",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --project=unit",
    "test:integration": "jest --project=integration",
    "test:load": "jest --project=load --testTimeout=120000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:db:reset": "node scripts/reset-test-db.js",
    "test:redis:clear": "node scripts/clear-test-redis.js",
    "benchmark": "node benchmarks/benchmark-runner.js",
    "benchmark:report": "node benchmarks/generate-report.js",
    "perf:monitor": "node monitoring/start-monitor.js",
    "perf:report": "node monitoring/generate-report.js",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "dev": "ts-node-dev --respawn server/websocket-server.ts",
    "start": "node dist/server/websocket-server.js",
    "migrate": "node database/migrate.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/test-setup.ts"
    ],
    "globalSetup": "<rootDir>/tests/setup/global-setup.ts",
    "globalTeardown": "<rootDir>/tests/setup/global-teardown.ts",
    "projects": [
      {
        "displayName": "unit",
        "testMatch": [
          "<rootDir>/tests/**/*.test.ts"
        ],
        "testPathIgnorePatterns": [
          "/node_modules/",
          "/integration/",
          "/load/"
        ]
      },
      {
        "displayName": "integration",
        "testMatch": [
          "<rootDir>/tests/integration/**/*.test.ts"
        ],
        "testTimeout": 30000
      },
      {
        "displayName": "load",
        "testMatch": [
          "<rootDir>/tests/load/**/*.test.ts"
        ],
        "testTimeout": 120000
      }
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/*.test.ts",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/benchmarks/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "ws": "^8.14.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.0",
    "ioredis": "^5.3.2",
    "uuid": "^9.0.0",
    "bcrypt": "^5.1.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@types/pg": "^8.10.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "@faker-js/faker": "^8.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "collaboration",
    "real-time",
    "websocket",
    "security",
    "testing"
  ],
  "author": "Boo Team",
  "license": "MIT"
}