{
  "name": "@boo/infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Boo collaboration system",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "cdk:deploy": "cdk deploy --all --require-approval never",
    "cdk:deploy:dev": "cdk deploy --all --require-approval never --context environment=dev",
    "cdk:deploy:staging": "cdk deploy --all --require-approval never --context environment=staging",
    "cdk:deploy:prod": "cdk deploy --all --require-approval never --context environment=prod",
    "cdk:destroy": "cdk destroy --all",
    "cdk:diff": "cdk diff",
    "cdk:synth": "cdk synth",
    "cdk:list": "cdk list",
    "cdk:bootstrap": "cdk bootstrap",
    "deploy": "./scripts/deploy.sh",
    "destroy": "./scripts/destroy.sh",
    "build-image": "./scripts/build-and-push.sh",
    "update-service": "./scripts/update-service.sh",
    "rollback": "./scripts/rollback.sh",
    "logs": "./scripts/logs.sh",
    "shell": "./scripts/shell.sh",
    "db-tunnel": "./scripts/db-tunnel.sh",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.120.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure",
    "ecs",
    "fargate",
    "rds",
    "elasticache",
    "production"
  ],
  "author": "Boo Team",
  "license": "MIT"
}